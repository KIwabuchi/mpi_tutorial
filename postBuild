cd /tmp && wget -q --no-check-certificate https://github.com/Kitware/CMake/releases/download/v3.22.0-rc1/cmake-3.22.0-rc1-linux-x86_64.tar.gz && tar xf cmake-3.22.0-rc1-linux-x86_64.tar.gz && rm -f cmake-3.22.0-rc1-linux-x86_64.tar.gz
mv /tmp/cmake-3.22.0-rc1-linux-x86_64 /tmp/cmake
cd /tmp && wget -q --no-check-certificate https://download.open-mpi.org/release/open-mpi/v4.1/openmpi-4.1.1.tar.bz2 && tar xf openmpi-4.1.1.tar.bz2 && rm -f openmpi-4.1.1.tar.bz2
mv /tmp/openmpi-4.1.1 /tmp/mpi && cd /tmp/mpi/ && mkdir build && cd build && ../configure CC=gcc-8 CXX=g++-8 && make -j
